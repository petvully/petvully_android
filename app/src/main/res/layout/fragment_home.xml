<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    tools:context=".view.main.home.HomeFragment">
<!--<org.e1i4.petvully.view.main.home.HomeSurfaceView-->
<!--    android:id="@+id/home_surface_view"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"/>-->

    <View
        android:id="@+id/background"
        android:background="@drawable/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/dog"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/color_primary"/>
    <LinearLayout
        android:id="@+id/home_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_appbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:layout_weight="1"
                android:lineSpacingExtra="-6dp"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/menu_heart"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/menu_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_menu"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_appbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_appbar_layout"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="5dp">
        <TextView
            android:id="@+id/home_current_level"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
        <ProgressBar
            android:id="@+id/home_level_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_level"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:paddingHorizontal="6dp"/>
        <TextView
            android:id="@+id/home_next_level"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/fab_water"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_water"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_feed"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_feed"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_touch"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingStart="3.5dp"
        android:paddingEnd="6.5dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_touch"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_shower"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_shower"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_walk"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingEnd="3dp"
        android:paddingStart="7dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_walk"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_plus"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/color_primary"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_plus"
        android:elevation="7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>