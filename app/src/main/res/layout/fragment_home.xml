<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.home.HomeFragment">

    <View
        android:id="@+id/background"
        android:background="@drawable/test_bed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/img_pet2"/>
    <LinearLayout
        android:id="@+id/home_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_appbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:layout_weight="1"
                android:lineSpacingExtra="-6dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/menu_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_msg"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:id="@+id/menu_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_appbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/levelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_appbar_layout"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/home_current_level"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="#aa2c51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Lv.1"
            android:paddingVertical="11dp"
            android:paddingHorizontal="5dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_circle"/>
        <View
            android:id="@+id/exp1"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#92153a"
            android:layout_marginEnd="4dp"/>
        <View
            android:id="@+id/exp2"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#92153a"
            android:layout_marginEnd="4dp"/>
        <View
            android:id="@+id/exp3"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#92153a"
            android:layout_marginEnd="4dp"/>
        <View
            android:id="@+id/exp4"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#92153a"
            android:layout_marginEnd="4dp"/>
        <View
            android:id="@+id/exp5"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:backgroundTint="#fcecec"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/home_next_level"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="#aa2c51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Lv.1"
            android:paddingVertical="11dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/background_circle"
            android:backgroundTint="@color/light_gray2"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/levelLayout"
        android:paddingVertical="18dp">
        <FrameLayout
            android:id="@+id/chatLayout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_marginEnd="18dp">

            <ImageView
                android:src="@drawable/background_home_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/chat"
                android:text="뽀득뽀득"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dung_geun_mo"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textSize="24sp"
                />
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coin"
            android:layout_marginTop="3dp"
            android:paddingHorizontal="6dp"/>
        <TextView
            android:id="@+id/tv_coin"
            android:text="23"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/fab_water"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_water"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_feed"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_feed"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_touch"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingStart="3.5dp"
        android:paddingEnd="6.5dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_touch"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_shower"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_shower"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_walk"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingEnd="3dp"
        android:paddingStart="7dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_walk"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/fab_plus"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/color_primary"
                app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_plus"
        android:elevation="7dp"/>
    <ImageView
        android:id="@+id/hand"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:src="@drawable/shower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>