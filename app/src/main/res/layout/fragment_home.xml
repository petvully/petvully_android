<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    tools:context=".view.main.home.HomeFragment">
<!--<org.e1i4.petvully.view.main.home.HomeSurfaceView-->
<!--    android:id="@+id/home_surface_view"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"/>-->

    <View
        android:id="@+id/background"
        android:background="@drawable/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/dog"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="start|top"
        android:src="@color/color_primary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/menu_heart"
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:src="@drawable/test"/>
            <ImageView
                android:id="@+id/menu_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/test"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_appbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="30dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/fab_water"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_water"/>
    <ImageView
        android:id="@+id/fab_feed"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_feed"/>
    <ImageView
        android:id="@+id/fab_touch"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingStart="3.5dp"
        android:paddingEnd="6.5dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_touch"/>
    <ImageView
        android:id="@+id/fab_shower"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_shower"/>
    <ImageView
        android:id="@+id/fab_walk"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:paddingVertical="10dp"
        android:paddingEnd="3dp"
        android:paddingStart="7dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_circle"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_walk"/>
    <ImageView
        android:id="@+id/fab_plus"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/color_primary"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_plus"/>
</FrameLayout>