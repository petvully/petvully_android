<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pet_soon"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginHorizontal="8dp"
        android:elevation="2dp"
        android:src="@drawable/img_pet_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_kind_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="11sp"
        android:textColor="@color/color_text_black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/iv_pet_soon"
        app:layout_constraintStart_toStartOf="parent"
        android:text="🐶"/>

    <TextView
        android:id="@+id/tv_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textSize="11sp"
        android:textColor="@color/color_text_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_kind_icon"
        app:layout_constraintStart_toEndOf="@+id/tv_kind_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_kind_icon" />

    <TextView
        android:id="@+id/tv_sex_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="11sp"
        android:textColor="@color/color_text_black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_kind_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:text="❎"/>

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textSize="11sp"
        android:textColor="@color/color_text_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sex_icon"
        app:layout_constraintStart_toEndOf="@+id/tv_sex_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_sex_icon" />

    <TextView
        android:id="@+id/tv_age_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="✅"
        android:textColor="@color/color_text_black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex_icon" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textSize="11sp"
        android:textColor="@color/color_text_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age_icon"
        app:layout_constraintStart_toEndOf="@+id/tv_age_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_age_icon" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:textColor="@color/color_text_black"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_pet_soon"
        app:layout_constraintTop_toTopOf="@+id/tv_kind_icon" />



</androidx.constraintlayout.widget.ConstraintLayout>